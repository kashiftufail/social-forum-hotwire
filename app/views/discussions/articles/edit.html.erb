<h1>Edit article</h1>
<%= turbo_frame_tag dom_id(@article) do %>
  <div class="card my-4">
    <div class="card-body">
      <%= render(partial: "discussions/articles/article", locals: { article: @article }) %>
      <%= render("form", article: @article) %>
      <%= link_to 'Back', discussion_article_path(@article.discussion, @article) %>
    </div>
  </div>
<% end %>